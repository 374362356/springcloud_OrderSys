<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper  namespace="com.zp.dao.MenuDao">

    <resultMap id="menuMap" type="com.zp.entity.Menu">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="price" property="price"/>
        <result column="flavor" property="flavor"/>
        <association property="type" select="com.zp.dao.TypeDao.findById" column="tid"/>
    </resultMap>

    <select id="findAll" resultMap="menuMap">
        select * from t_menu limit #{index},#{count}
    </select>

    <select id="count" resultType="int">
        select count(id) from t_menu
    </select>

    <select id="findById" resultMap="menuMap" parameterType="long">/*这里也要映射到type，不然前端type为null*/
        select * from t_menu where id=#{id}
    </select>

    <insert id="save" parameterType="com.zp.entity.Menu">
        insert into t_menu (name, price, flavor, tid) values (#{name},#{price},#{flavor},#{type.id});
    </insert>

    <update id="update" parameterType="com.zp.entity.Menu">
        update t_menu set name=#{name},price=#{price},flavor=#{flavor},tid=#{type.id} where id=#{id}
    </update>

    <delete id="deleteById" parameterType="long">
        delete from t_menu where id=#{id}
    </delete>
</mapper>